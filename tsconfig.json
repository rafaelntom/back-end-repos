{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]

}